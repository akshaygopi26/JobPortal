            <label asp-for="PostedRecruiterId" class="control-label">Posted Recruiter Id</label>
            <select asp-for="PostedRecruiterId" class="form-control" asp-items="ViewBag.PostedRecruiterId"></select>
        </div>*@

                <input type="submit" value="Add" class="btn btn-info btn-block">
                <input name="__RequestVerificationToken" type="hidden" value="<removed for brevity>">
            </form>
        </div>
    </div>

</div>