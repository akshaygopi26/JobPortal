@model JobPortal.Models.JobDetails
@{
    ViewData["Title"] = "Add new job";
}

<div class="row">
    @if (TempData["validationmessage"] != null)
    {
        string alertType = "alert alert-" + TempData["alertType"];
        <div class="@alertType">
            <strong>Alert!</strong> @TempData["validationmessage"]
        </div>
    }
</div>
<h2 class="text-center">Add a new job</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form role="form" asp-action="AddJobRecruiter" asp-controller="JobDetails" method="post">
                <div class="form-group">
                    <label for="Position">Position</label>
                    <input type="text" name="Position" asp-for="Position" autocomplete="off" class="form-control input-sm" placeholder="Position">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CompanyName">Company Name</label>
                    <input type="text" name="CompanyName" asp-for="CompanyName" autocomplete="off" class="form-control input-sm" placeholder="Company Name">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Eligibility">Eligibility</label>
                    <input type="text" name="Eligibility" asp-for="Eligibility" autocomplete="off" class="form-control input-sm" placeholder="Eligibility">
                    <span asp-validation-for="Eligibility" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="MinimumExperienceRequired">Minimum Experience Required</label>
                    <input type="text" name="MinimumExperienceRequired" asp-for="MinimumExperienceRequired" autocomplete="off" class="form-control input-sm" placeholder="Minimum Experience Required">
                    <span asp-validation-for="MinimumExperienceRequired" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="SkillsRequired">Skills Required</label>
                    <input type="text" name="SkillsRequired" asp-for="SkillsRequired" autocomplete="off" class="form-control input-sm" placeholder="SkillsRequired">
                    <span asp-validation-for="SkillsRequired" class="text-danger"></span>
                </div>

